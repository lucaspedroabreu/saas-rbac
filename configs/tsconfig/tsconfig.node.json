{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Node 20",
  "_version": "20.1.0",
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "plugins": [{ "name": "node" }],
    "module": "node16",
    "allowJs": true,
    "jsx": "preserve",
    "noEmit": true,
    "lib": ["ES2022"],
    "target": "es2022",

    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  }
}
